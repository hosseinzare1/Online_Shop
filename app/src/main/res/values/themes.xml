<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnlineShop" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">#ffffff</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>


        <item name="textAppearanceHeadline5">@style/Theme.OnlineShop.Headline5</item>
        <item name="textAppearanceHeadline6">@style/Theme.OnlineShop.Headline6</item>
        <item name="textAppearanceButton">@style/Theme.OnlineShop.Button</item>
        <item name="textAppearanceCaption">@style/Theme.OnlineShop.Caption</item>
        <item name="textAppearanceBody1">@style/Theme.OnlineShop.Body1</item>
        <item name="textAppearanceBody2">@style/Theme.OnlineShop.Body2</item>
        <item name="textAppearanceSubtitle1">@style/Theme.OnlineShop.Subtitle1</item>
        <item name="android:fontFamily">@font/iran</item>
        <item name="textInputStyle">
            @style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>



</resources>